	keywords = {Cell Movement, Humans, Signal Transduction, Female, Breast, Epithelial Cells, Integrins, ras Proteins, Cell Line, Transformed, GTP Phosphohydrolases},
	pages = {1077--1088}
}

@article{keely_cdc42_1997,
