@article{ishihara_mechano-signal_2017,
	title = {Mechano-{Signal} {Transduction} in {Mesenchymal} {Stem} {Cells} {Induces} {Prosaposin} {Secretion} to {Drive} the {Proliferation} of {Breast} {Cancer} {Cells}},
