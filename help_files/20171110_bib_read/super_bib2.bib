	keywords = {Humans, Fluorescence, Male, Cell Survival, Infrared Rays, Lasers, Micromanipulation, Sperm Motility, Spermatozoa, Ultraviolet Rays},
	pages = {2162--2164}
}

@article{konig_autofluorescence_1995,
