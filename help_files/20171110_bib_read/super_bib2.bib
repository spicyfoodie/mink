@article{nagathihalli_signal_2015,
	title = {Signal {Transducer} and {Activator} of {Transcription} 3, {Mediated} {Remodeling} of the {Tumor} {Microenvironment} {Results} in {Enhanced} {Tumor} {Drug} {Delivery} in a {Mouse} {Model} of {Pancreatic} {Cancer}},
