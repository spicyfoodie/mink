	journal = {Cytometry. Part A: The Journal of the International Society for Analytical Cytology},
	author = {Kim, Ki Hean and Ragan, Timothy and Previte, Michael J. R. and Bahlmann, Karsten and Harley, Brendan A. and Wiktor-Brown, Dominika M. and Stitt, Molly S. and Hendricks, Carrie A. and Almeida, Karen H. and Engelward, Bevin P. and So, Peter T. C.},
