	pmid = {10958394},
	keywords = {Animals, Microscopy, Electron, Cell Division, Cytoplasm, Cricetinae, Mitochondria, CHO Cells, Lasers, Golgi Apparatus},
	pages = {263--270}
}

@article{stark_multiparametric_2007,
	title = {Multiparametric high-resolution imaging of barley embryos by multiphoton microscopy and magnetic resonance micro-imaging},
