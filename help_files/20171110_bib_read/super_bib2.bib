	keywords = {Cell Movement, Phenotype, Animals, Zebrafish, Molecular Sequence Data, Gene Expression Regulation, Neutrophils, Immunity, Innate, DNA-Binding Proteins, Heat-Shock Response, HSP27 Heat-Shock Proteins, HSP70 Heat-Shock Proteins},
