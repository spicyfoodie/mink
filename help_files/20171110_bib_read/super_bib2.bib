	number = {2},
	journal = {Biochimica Et Biophysica Acta},
	author = {Periasamy, Agalya and Shadiac, Nadim and Amalraj, Amritha and Garajová, Soňa and Nagarajan, Yagnesh and Waters, Shane and Mertens, Haydyn D. T. and Hrmova, Maria},
