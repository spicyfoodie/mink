	pmid = {16488695},
	keywords = {Collagen, Extracellular Matrix, Animals, Microscopy, Confocal, Models, Animal, Cryopreservation, Swine, Photons, Pulmonary Valve, Heart Valves, Transplantation, Homologous},
	pages = {918--926}
}

@article{konig_pulse-length_1999,
	title = {Pulse-length dependence of cellular response to intense near-infrared laser pulses in multiphoton microscopes},
